@{
    ViewBag.Title = "File Upload";
}
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Upload", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <hr />
                <div class="form-group">
                    <label for="numshares">Number of shares to create</label>
                    <div class="col-md-10">
                        <input type="number" name="numshares" id="numshares" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="minshares">Minumum required shares to rebuild the file</label>
                    <div class="col-md-10">
                        <input type="number" name="minshares" id="minshares" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="file">Select a file to upload</label>
                    <div class="col-md-10">
                        <input type="file" name="file" id="file" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Upload File" name ="action:Upload" class="btn btn-default" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @ViewBag.Message
                    </div>
                </div>
            }
        </section>
    </div>
</div>


